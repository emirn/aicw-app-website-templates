{{#if config.seo.enableJsonLd}}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{config.site.name}}",
  "url": "{{config.site.url}}",
  {{#if config.logo.imageUrl}}"logo": "{{config.logo.imageUrl}}",{{/if}}
  "description": "{{config.site.description}}"
  {{#if config.footer.socialLinks}}
  ,"sameAs": [{{#if config.footer.socialLinks.twitter}}"{{config.footer.socialLinks.twitter}}"{{/if}}{{#if config.footer.socialLinks.linkedin}}{{#if config.footer.socialLinks.twitter}},{{/if}}"{{config.footer.socialLinks.linkedin}}"{{/if}}{{#if config.footer.socialLinks.facebook}}{{#if (or config.footer.socialLinks.twitter config.footer.socialLinks.linkedin)}},{{/if}}"{{config.footer.socialLinks.facebook}}"{{/if}}]
  {{/if}}
}
</script>
{{/if}}
