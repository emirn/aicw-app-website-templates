{{!-- Homepage with hero and article listing --}}
{{#> base}}
  {{#if config.hero.enabled}}
  {{> hero}}
  {{/if}}

  <section class="articles-section">
    <div class="container">
      {{#if config.blog.sectionTitle}}
      <h2 class="section-title">{{config.blog.sectionTitle}}</h2>
      {{/if}}

      {{#if articles.length}}
      <div class="article-grid">
        {{#each articles}}
        {{> article-card}}
        {{/each}}
      </div>

      {{#if pagination.totalPages}}
      {{> pagination}}
      {{/if}}
      {{else}}
      <p class="no-articles">No articles published yet.</p>
      {{/if}}
    </div>
  </section>

  {{!-- Homepage JSON-LD Structured Data --}}
  {{> homepage-schema}}
{{/base}}
